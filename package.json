{
  "name": "Colorpicker",
  "productName": "Colorpicker",
  "version": "1.6.0",
  "description": "Colorpicker is a little Electron app that can show colors with hex/rgb code, and generate shading for your color.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron src/main.js",
    "standard": "standard",
    "pack": "build --dir",
    "release": "build --config colorpicker-build.json",
    "release-linux": "build --config colorpicker-build.json --linux deb, apk, rpm, zip, appImage",
    "release-window": "build --config colorpicker-build.json --win nsis, portable",
    "nightly": "build --config colorpicker-build-nightly.json",
    "nightly-linux": "build --config colorpicker-build-nightly.json --linux deb appImage",
    "rebuild": "npm rebuild --runtime=electron --target=1.7.8 --disturl=https://atom.io/download/atom-shell --abi=$(electron --abi)"
  },
  "repository": "https://github.com/toinane/colorpicker",
  "keywords": [
    "Colorpicker",
    "colors",
    "code",
    "shading",
    "picker",
    "Toinane",
    "Crea-THAT",
    "crea-that"
  ],
  "dependencies": {
    "electron-json-storage": "^3.1.0",
    "request": "^2.81.0",
    "robotjs-shade": "git+https://github.com/jdan/robotjs.git",
    "sortablejs": "^1.6.1",
    "tippy.js": "^1.3.0"
  },
  "optionalDependencies": {
    "osx-mouse": "^1.2.1",
    "win-mouse": "^1.1.2"
  },
  "devDependencies": {
    "electron": "1.7.8",
    "electron-builder": "19.28.4",
    "standard": "^10.0.3"
  },
  "iohook": {
    "targets": [
      "electron-54"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64"
    ]
  },
  "author": {
    "name": "Toinane",
    "email": "toinane@crea-that.fr",
    "url": "https://toinane.crea-th.at"
  },
  "bugs": "https://github.com/toinane/colorpicker/issues",
  "homepage": "https://crea-th.at/p/colorpicker",
  "license": "GPL-3.0"
}
