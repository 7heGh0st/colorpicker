{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es2018",
        "newLine": "LF",
        "noImplicitAny": false,
        "pretty": true,
        "sourceMap": true,
        "strict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "exclude": [
        "old",
        "tests",
        "node_modules"
    ]
}